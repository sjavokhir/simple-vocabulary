<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Text14sp" parent="TextBase">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text16sp" parent="TextBase">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text18sp" parent="TextBase">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Text20sp" parent="TextBase">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="InputView" parent="Text16sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:drawablePadding">@dimen/dp_12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_20</item>
        <item name="android:paddingBottom">@dimen/dp_20</item>
        <item name="android:textColorHint">@color/colorGray500</item>
    </style>

</resources>